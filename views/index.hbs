<h2>Todos page</h2>

{{#if todos.length}}
<ul>
    {{#each todos}}
        <li class="todo">
            <form action="/complete" method="POST">
                <label>
                    {{#if status}}
                    <input type="checkbox" checked name="completed">
                    <span class="completed">{{content}}</span>
                    {{else}}
                    <input type="checkbox" name="completed">
                    <span>{{content}}</span>
                    {{/if}}
                    
                    <input type="hidden" value="{{id}}" name="id">
                </label>
            </form>
        </li>
    {{/each}}
</ul>
{{else}}
<p>No todos!</p>
{{/if}}